{
  "name": "vite-kuromoji.ts",
  "description": "TypeScript implementation of Japanese morphological analyzer",
  "type": "module",
  "version": "0.1.2",
  "author": "Takuya Asano <takuya.a@gmail.com>",
  "main": "./src/kuromoji.js",
  "keywords": [
    "japanese",
    "morphological analyzer",
    "nlp",
    "pos",
    "pos tagger",
    "tokenizer"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "build": "vite build",
    "build-dict": "vite build --mode dict",
    "coverage": "vitest run --coverage",
    "lint": "biome check ./src",
    "test": "vitest",
    "watch": "vite build --watch",
    "example:deno": "deno run -A --unstable-sloppy-imports ./example/load-deno.js",
    "example:node": "tsx ./example/load-node.js",
    "example:bun": ""
  },
  "module": "./build/kuromoji.js",
  "types": "./src/kuromoji.ts",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "^1.2.2",
    "@types/deno": "^2.2.0",
    "@types/node": "^22.13.4",
    "@vitejs/plugin-legacy": "^6.0.1",
    "@vitest/coverage-v8": "^3.0.6",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vite-plugin-checker": "^0.8.0",
    "vitest": "^3.0.6"
  }
}
